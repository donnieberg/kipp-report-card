<% if signed_in? %>
  <nav class='main-nav' id='main-nav'>
    <%= image_tag @user.avatar.url, class:"gravatar" %>
    <ul>
      <li class='user_name'><%= current_user.first_name %></li>
      <li>
        <%= link_to root_path do %>
        <div class='icon'><%=image_tag 'shop_white.png'%></div>
        <div class='navtext'>Home</div>
        <% end %>
      </li>


      <% if current_user.type == 'Teacher' %>  <!-------- TEACHER VIEW ---------->
        <% if current_user.admin %>  <!-------- ADMIN VIEW ---------->
          <li><%= link_to 'www.google.com' do %>
            <div class='icon'><%=image_tag 'user_white.png'%></div>
            <div class='navtext'>All Users</div>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to 'www.google.com' do %>
            <div class='icon'><%=image_tag 'pen_white.png'%></div>
            <div class='navtext'>Grade Students</div>
            <% end %>
          </li>
        <% end %>  <!-------- END ADMIN VIEW ---------->
          <li>
            <%= link_to edit_user_registration_path do %>
            <div class='icon'><%=image_tag 'params_white.png'%></div>
            <div class='navtext'>My Dashboard</div>
            <% end %>
          </li>
      <% else %>  <!-------- STUDENT VIEW ---------->
          <li><%= link_to 'www.google.com' do %>
            <div class='icon'><%=image_tag 'pen_white.png'%></div>
            <div class='navtext'>My Report Card</div>
            <% end %>
          </li>
          <li>
            <%= link_to 'www.google.com' do %>
            <div class='icon'><%=image_tag 'params_white.png'%></div>
            <div class='navtext'>My Dashboard</div>
            <% end %>
          </li>
      <% end %>

      <li>
        <%= link_to edit_user_registration_path(current_user) do %>
        <div class='icon'><%=image_tag 'settings_white.png'%></div>
        <div class='navtext'>Settings</div>
        <% end %>
      </li>
      <li>
        <%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %>
      </li>
    </ul>
  </nav>
  <% end %>




